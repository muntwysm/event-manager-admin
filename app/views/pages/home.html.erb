<h1>Event Supplies Helper</h1>

<h3>Upcoming events</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.location.name %></td>
    <td><%=h short_date_time event.date %></td>
    <td><%= link_to 'Requirements', event %></td>
  </tr>
<% end %>
</table>


<h3>Thank you! The following contributions have been made recently</h3>

<table>
  <tr>
    <th>Date</th>
    <th>Event</th>
    <th>Item -- Unit</th>
    <th>Qty</th>
    <th>Contributed by</th>
  </tr>

<% @contributions.each do |contribution| %>
  <tr>
    <td><%=h short_version_of contribution.created_at %></td>
    <td><%=h contribution.event.name %></td>
    <td><%=h contribution.item.name_with_unit %></td>
    <td><%=h contribution.qty %></td>
		<td><%= link_to contribution.email, individual_contributions_url(:search => contribution.email) %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @contributions %>
