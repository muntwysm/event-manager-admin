<p>
  <b>Event:</b>
  <%=h @contribution.event.name %><br />
	<%=h short_date_time @contribution.event.date %><br />
	<%=h @contribution.event.location.name %>
</p>
<p>
  <b>Item contributed:</b>
  <%=h @contribution.item.name %> (<%=h @contribution.item.unit %>)
</p>
<p>
  <b>Qty:</b>
  <%=h @contribution.qty %>
</p>
<p>
  <b>Name:</b>
  <%=h @contribution.email %>
</p>

<% if flash[:notice] %>
	<%= link_to "Contribute more to #{@contribution.event.name}", @contribution.event %> |
<% end %>
<%= link_to 'Edit', edit_contribution_path(@contribution) %> |
<%= link_to 'Destroy', @contribution.id.to_s, :confirm => 'Are you sure?', :method => :delete %>
